{
    "name": "daycry/restserver",
    "description": "Rest Server for Codeigniter 4",
    "homepage": "https://github.com/daycry/restserver",
    "authors":
    [
        {
            "name": "daycry",
            "homepage": "https://github.com/daycry",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "require": {
      "php": ">=7.2 || ^8.0",
        "daycry/encryption": "^2.0",
        "lcobucci/jwt": "^4.1",
        "daycry/settings": "^1.0",
        "daycry/class-finder": "^1.0",
        "tatter/relations": "^2.0"
    },
    "require-dev":
    {
        "phpunit/phpunit" : "8.5.*",
        "codeigniter4/framework": "^4.0.2",
        "friendsofphp/php-cs-fixer": "^3.1"
    },
    "autoload":
    {
        "psr-4": {
            "Daycry\\RestServer\\": "src/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "Daycry\\RestServer\\": "tests/RestServer/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-fixer": "vendor/bin/php-cs-fixer fix src"
    }
}
